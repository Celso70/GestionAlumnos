@{
    ViewData["Title"] = "Index";
}


<!-- Modal -->
<div class="modal fade" id="CarreraModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="CarreraH1">Agregar Carrera </h5>
        <input class="text-center" id="CarreraHiddenInputID" value="0" disabled/>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
        <div id="CarreraForm" class="form-group">

            <label class="control-label">Carrera</label>
            <input type="text" class="form-control" id="textoInput" name="CarreraNombre" autocomplete="off" />

            <label class="control-label">Duracion</label>
            <input type="number" class="form-control" id="CarreraDuracionInput" name="CarreraDuracion" autocomplete="off" />
            

            <span class="text-danger" id="lbl-error"></span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button id="btn-crear" type="button" onclick="CarreraGuardar()" class="btn btn-primary">Crear</button>
        
        <input id="btnDesHabilitar" type="button" onclick="CarreraEliminar()" class="btn btn-warning" value="Deshabilitar" />
        <input id="btnHabilitar" type="button" onclick="CarreraEliminar()" class="btn btn-success value="Habilitar" />
        <button id="btnEliminar" type="button" onclick="CarreraEliminar()" class="btn btn-danger">Eliminar</button>
      </div>
    </div>
  </div>
</div>


<div>
    <h1 class="display-4">Carreras</h1>

      <!-- Button trigger modal -->
      <div class="mb-2">
        <button type="button" onclick="AbrirModal()" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalCarrera">
            Nuevo
        </button>
      </div>

 
  <table class="table table-bordered table-striped table-condensed">
    <thead>
        <tr>
            <th>NÂ°</th>
            <th>Nombre</th>
            <th>Duracion</th>
        </tr>
    </thead>
        <tbody id="CarrerasTabla">        
        </tbody>
  </table>
</div>

 @section Scripts{
    <script src="~/js/carrera.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/sweetalert.js"></script>
}
